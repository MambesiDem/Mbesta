<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<HBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project.HelloController">
    <children>
        <VBox spacing="70" alignment="CENTER_RIGHT" prefWidth="700" fillWidth="true" style="-fx-background-image: url('logo.png');">
            <children>
                <Label text="Username: " style="-fx-background-color: deepskyblue" textAlignment="CENTER" textFill="white" prefWidth="120" alignment="TOP_RIGHT">
                    <font>
                        <Font name="Arial" size="20"/>
                    </font>
                </Label>
                <Label text="Password: " style="-fx-background-color: deepskyblue" textAlignment="CENTER" textFill="white" prefWidth="100" alignment="TOP_RIGHT">
                    <font>
                        <Font name="Arial" size="20"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <Pane prefWidth="500" style="-fx-background-color: deepskyblue">
            <TextField fx:id="txtUserName" text="Enter username" onAction="#onUsernameTxtClicked">
                <prefWidth>300</prefWidth>
                <prefHeight>20</prefHeight>
                <layoutX>10</layoutX>
                <layoutY>190</layoutY>
            </TextField>
            <TextField fx:id="txtPassword" text="Enter password" onAction="#onPasswordTxtClicked">
                <prefWidth>300</prefWidth>
                <prefHeight>20</prefHeight>
                <layoutX>10</layoutX>
                <layoutY>285</layoutY>
            </TextField>
            <Label fx:id="validityTxt" textFill="white">
                <font>
                    <Font size="15"/>
                </font>
                <layoutX>10</layoutX>
                <layoutY>340</layoutY>
            </Label>
            <Button fx:id="loginBtn" text="Login" onAction="#onLoginBtnClicked">
                <font>
                    <Font name="Arial" size="30" />
                </font>
                <prefWidth>250</prefWidth>
                <layoutX>20</layoutX>
                <layoutY>400</layoutY>
            </Button>
        </Pane>
    </children>

</HBox>

